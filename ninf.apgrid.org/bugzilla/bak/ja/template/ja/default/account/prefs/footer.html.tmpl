[%# INTERFACE:
  # mybugslink: boolean. True if the user wishes the My Bugs link to appear. 
  # queries: array of hashes. May be empty. Each hash has two members:
  #   name:   string. The name of the query.
  #   footer: boolean. True if the query appears in the footer.
  #%]
 
<table>
  <tr>
    <th align="right">'私のバグ'のリンク:</th>
    <td>
      <select name="mybugslink">
        <option value="1">すべてのページの下部に表示</option>  
        <option value="0" 
          [% " selected" IF NOT mybugslink %]>表示しない
        </option>  
      </select>
    </td>
  </tr>    
    
  <input type="hidden" name="numqueries" value="[% queries.size %]">
  [% IF queries.size %]
    [% FOREACH query = queries %]
      <tr>
        <th align="right">保存された検索条件 '[% query.name FILTER html %]':</th>
        <td>
          <select name="query-[% loop.index %]">
            <option value="0">検索ページでのみ表示</option>  
            <option value="1" 
              [% " selected" IF query.footer %]>
              すべてのページの下部に表示
            </option>  
          </select>
        </td>
      </tr>

      <input type="hidden" name="name-[% loop.index %]" 
             value="[% query.name FILTER html %]">
    [% END %]

  [% ELSE %]
    <tr>
      <td colspan="4">
        <br>                            
        <a href="query.cgi">検索ページ</a>
	で検索条件を保存すると、このページでそれぞれの検索を
	Bugzilla 内の各ページ下部に表示するよう設定できます。
        <br>
        <br>
      </td>
    </tr>
  [% END %]
    
</table>
