[%# Filter off the name here to be used multiple times below %]
[% name = name FILTER html %]

[% PROCESS global/header.html.tmpl 
  title = "添付ファイルのステータス '$name' の削除確認" 
%]

<p>
   [% attachcount %] つの添付ファイルのステータスが '[% name %]'
   となっています。削除すると、これらの添付ファイルはステータス
   が無くなってしまいます。 
</p>

<table>
   <tr>
      <td colspan=2>
	 本当にこのステータスを削除してもよろしいですか？
      </td>
   </tr>
   <tr>
      <td>
         <a href="editattachstatuses.cgi?action=delete&id=[% id %]">
            はい。削除します
         </a>
      </td>
      <td align="right">
         <a href="editattachstatuses.cgi">
            いいえ。削除しません
         </a>
      </td>
   </tr>
</table>

[% PROCESS global/footer.html.tmpl %]
