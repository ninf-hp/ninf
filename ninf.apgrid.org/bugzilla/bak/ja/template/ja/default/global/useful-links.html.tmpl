[%# INTERFACE:
  # user: hash. Information about the user. If the user is not logged in,
  #       user.login is undefined.
  #   login: string. The user's Bugzilla login email address.
  #   showmybugslink: boolean. True if user wants My Bugs in the footer.
  #   queries: list of strings. The names of those of the user's named
  #     queries which should be displayed in the footer.
  #   groups: hash. Keys are group names, values are true if user in that group.
  #     The keys used in this template are
  #     tweakparams, editcomponents, creategroups, editkeywords, confirm,
  #     editbugs, editusers. 
  #%]

[%# Migration note: this whole file corresponds to the old %commandmenu% 
    substitution param in 'footerhtml' %]

<form method="get" action="show_bug.cgi">
  <table width="100%">
    <tr>
      <td>
        アクション:
      </td>
      
      <td valign="middle" nowrap>
        <a href="enter_bug.cgi">報告</a> | 
        <a href="query.cgi">検索</a> |
        
        <input type="submit" value="番号"><!-- bug # -->
        <input name="id" size="6"> | 
        
        <a href="reports.cgi">統計</a> 
       
        [% IF user.login && Param('usevotes') %]
          | <a href="votes.cgi?action=show_user">私の投票</a>
        [% END %]      
      </td>

      <td>&nbsp;</td>
      
    [% IF user.login %] 

      <td valign="middle">
        設定 <a href="userprefs.cgi">環境</a>
        [% ", <a href='editparams.cgi'>パラメータ</a>" 
                                                   IF user.groups.tweakparams %]
        [% ", <a href='editusers.cgi'>ユーザ</a>"     IF user.groups.editusers 
                                                  || (user.blessgroupset > 0) %]
        [% ", <a href='editproducts.cgi'>プロダクト</a>" 
                                                IF user.groups.editcomponents %]
        [% ", <a href='editattachstatuses.cgi'> 添付ファイルのステータス</a>" 
                                                IF user.groups.editcomponents %]
        [% ", <a href='editgroups.cgi'>グループ</a>" 
                                                  IF user.groups.creategroups %]
        [% ", <a href='editkeywords.cgi'>キーワード</a>" 
                                                  IF user.groups.editkeywords %]
        [% " | <a href='sanitycheck.cgi'>整合性確認</a>" 
                                                   IF user.groups.tweakparams %]

        | <a href="relogin.cgi">ログアウト</a>&nbsp;[% user.login %]
      </td>
    </tr> 

    [%# Preset queries %]
    
    [% preset_queries = user.showmybugslink %]
    [% FOREACH q = user.queries %]
      [% preset_queries = 1 IF q.linkinfooter %]
    [% END %]
      
    <tr>
      [% IF preset_queries %]
        <td>
          プリセット検索:
        </td>
      [% END %]
      
      <td colspan="3">
        [% IF user.showmybugslink %]
          [% filtered_username = user.login FILTER url_quote %]
          <a href="[% Param('mybugstemplate').replace('%userid%', filtered_username) %]">私のバグ</a>
          [% print_pipe = 1 %]
        [% END %]

        [% FOREACH q = user.queries %]
          [% IF q.linkinfooter %]
            [% " | " IF print_pipe %]
            <a href="buglist.cgi?cmdtype=runnamed&amp;namedcmd=[% q.name FILTER url_quote %]"><nobr>[% q.name FILTER html %]</nobr></a>
            [% print_pipe = 1 %]
          [% END %]        
        [% END %]
      </td>
    </tr>
      
    [% ELSE %]    
      <td valign="middle" align="right">
        <a href="createaccount.cgi">新規アカウント</a> | 
        <a href="query.cgi?GoAheadAndLogIn=1">ログイン</a>
      </td>
    </tr>
    [% END %]
    
  </table>                
</form>
