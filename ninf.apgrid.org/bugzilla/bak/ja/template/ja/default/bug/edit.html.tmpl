[%# Block for SELECT fields                                                  #%]
[%############################################################################%]

[% BLOCK select %]  
  <td>
    <select name="[% selname %]">
      [% FOREACH x = ${selname} %]
        <option value="[% x FILTER html %]"
          [% " selected" IF x == bug.${selname} %]>[% x FILTER html %]
        </option>
      [% END %]
    </select>
  </td>
  <td>&nbsp;</td>
[% END %]
