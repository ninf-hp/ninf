[% filtered_desc = bug.short_desc FILTER html %]
[% UNLESS header_done %]
  [% PROCESS global/header.html.tmpl 
    title = "Bug $bug.bug_id - $bug.short_desc"
    h1 = "Bugzilla Bug $bug.bug_id"
    h2 = filtered_desc
    header_html = navigation_links
   %]
[% END %]

[% PROCESS bug/navigate.html.tmpl %]

<hr>

<form name="changeform" method="post" action="process_bug.cgi">

  <input type="hidden" name="delta_ts" value="[% bug.delta_ts %]">
  <input type="hidden" name="longdesclength" value="[% bug.longdesclength %]">
  <input type="hidden" name="id" value="[% bug.bug_id %]">

[%# *** Platform Reporter Product OS AddCC *** %]

  <table cellspacing="1" cellpadding="1" border="0">
    <tr>      
      <td align="right">
        <b>Bug#:</b>
      </td>
      <td>
        <a href="[% Param('urlbase') %]show_bug.cgi?id=[% bug.bug_id %]">
          [% bug.bug_id %]</a>
      </td>
      
      <td>&nbsp;</td>

      <td align="right">
        <b>プラットフォーム:</b>
      </td>
      [% PROCESS select selname = "rep_platform" %]
      
      <td align="right">
        <b>報告者:</b>
      </td>
      <td>
        [% bug.reporter FILTER html %]
      </td>    
    </tr>
    
    <tr>
      <td align="right">
        <b>プロダクト:</b>
      </td>
      [% PROCESS select selname => "product" %]
      
      <td align="right">
        <b>OS:</b>
      </td>
      [% PROCESS select selname => "op_sys" %]

      <td align="right">
        <b>追加&nbsp;CC:</b>
      </td>
      <td>
        <input name="newcc" size="30" value="">
      </td>
    </tr>

[%# *** Component Version CC Priority Severity AssignedTo Milestone *** %]    

    <tr>
      <td align="right">
        <b>
          <a href="describecomponents.cgi?product=[% bug.product FILTER url_quote %]">
            コンポーネント</a>:
        </b>
      </td>
      <td>
        <select name="component">
          [% FOREACH x = component_ %]
            <option value="[% x FILTER html %]"
              [% " selected" IF x == bug.component %]>[% x FILTER html %]
            </option>
          [% END %]
        </select>
      </td>

      <td>&nbsp;</td>
 
      <td align="right">
        <b>バージョン:</b>
      </td>
      [% PROCESS select selname => "version"  %]
      
      <td rowspan="4" align="right" valign="top">
        <b>CC:</b>
      </td>
      <td rowspan="4" valign="top"> 
      [% IF bug.cc %]
        <select name="cc" multiple="multiple" size="5">
        [% FOREACH c = bug.cc %]
          <option value="[% c FILTER html %]">[% c FILTER html %]</option>
        [% END %]
        </select>
        <br>
        <input type="checkbox" name="removecc">選択された CC を削除
        <br>
      [% ELSE %]
        <input type="hidden" name="cc" value="">
      [% END %]
      </td>
    </tr>
    
    <tr>
      <td align="right">
        <b>
          <a href="bug_status.html">ステータス</a>:
        </b>
      </td>
      <td>[% bug.bug_status FILTER html %]</td>      
      <td>&nbsp;</td>
      
      <td align="right">
        <b><a href="bug_status.html#priority">優先順位</a>:</b>
      </td>
      [% PROCESS select selname => "priority" %]
    </tr>
    
    <tr>
      <td align="right">
        <b>
          <a href="bug_status.html">処理方法</a>:
        </b>
      </td>
      <td>[% bug.resolution FILTER html %]</td>      
      <td>&nbsp;</td>
      
      <td align="right">
        <b><a href="bug_status.html#severity">重要度</a>:</b>
      </td>
      [% PROCESS select selname = "bug_severity" %]
      
    </tr>
    
    <tr>
      <td align="right">
        <b>
          <a href="bug_status.html#assigned_to">担当者</a>:
        </b>
      </td>
      <td>[% bug.assigned_to FILTER html %]</td>
      <td>&nbsp;</td>
 
      [% IF Param("usetargetmilestone") && bug.target_milestone %]
        <td align="right">
          <b>
            <a href="[% bug.milestoneurl FILTER html %]">ターゲットマイルストーン</a>:
          </b>
        </td>
        [% PROCESS select selname = "target_milestone" %]
      [% ELSE %]
        <td colspan="3">&nbsp;</td>
      [% END %]
    </tr>

[%# *** QAContact URL Summary Whiteboard Keywords *** %]

   [% IF Param('useqacontact') %]
     <tr>
       <td align="right">
       <b>QA コンタクト:</b>
       </td>
       <td colspan="7">
         <input name="qa_contact" 
                value="[% bug.qa_contact FILTER html %]" size="60">
       </td>
     </tr>
   [% END %]

  <tr>
    <td align="right">
      <b>
        [% IF bug.bug_file_loc %]
          <a href="[% bug.bug_file_loc FILTER html %]">URL</a>:
        [% ELSE %]
          URL:
        [% END %]
      </b>
    </td>
    <td colspan="7">
      <input name="bug_file_loc" 
             value="[% bug.bug_file_loc FILTER html %]" size="60">
    </td>
  </tr>
  
  <tr>
    <td align="right">
      <b>要約:</b>
    </td>
    <td colspan="7">
      <input name="short_desc" 
             value="[% bug.short_desc FILTER html %]" size="60">
    </td>
  </tr>

  [% IF Param('usestatuswhiteboard') %] 
    <tr>
      <td align="right">
        <b>ホワイトボード:</b>
      </td>
      <td colspan="7">
        <input name="status_whiteboard" 
               value="[% bug.status_whiteboard FILTER html %]" size="60">
      </td>
    </tr>
  [% END %]

  [% IF use_keywords %]
    <tr>
      <td align="right">
        <b>
          <a href="describekeywords.cgi">キーワード</a>:
        </b>
      <td colspan="7">
        <input name="keywords" 
               value="[% bug.keywords.join(', ') FILTER html %]" size="60">
      </td>
    </tr> 
  [% END %]
  </table>
  
[%# *** Attachments *** %]

  [% PROCESS attachment/list.html.tmpl 
     attachments = bug.attachments 
     bugid = bug.bug_id %]

[%# *** Dependencies Votes *** %]

  [% IF Param('usedependencies') %]
  <table>
    <tr>
    [% PROCESS dependencies 
       dep = { title => "が依存する", fieldname => "dependson" } %]
      <td rowspan="2">
        <a href="showdependencytree.cgi?id=[% bug.bug_id %]">
        依存ツリーを表示</a>

        [% IF Param('webdotbase') %]  
          <br>
          <a href="showdependencygraph.cgi?id=[% bug.bug_id %]">
          依存グラフを表示</a>
        [% END %]
      </td>
    </tr>

    <tr>
    [% PROCESS dependencies 
       dep = { title => "が妨害する", fieldname => "blocked" } %]
    </tr>
  </table>
  [% END %]

  [% IF use_votes %]
  <table>
    <tr>
      <th>
        <a href="votehelp.html">得票数</a>:
      </th>
      <td>
        [% bug.votes %]&nbsp;&nbsp;&nbsp;
        <a href="votes.cgi?action=show_bug&amp;bug_id=[% bug.bug_id %]">
        このバグの投票を見る</a>&nbsp;&nbsp;&nbsp;
        <a href="votes.cgi?action=show_user&amp;bug_id=[% bug.bug_id %]">
        このバグに投票する</a>
      </td>
    </tr>
  </table>
  [% END %]

[%# *** Comments Groups *** %]

  <br>
  <b>追加コメント:</b>
  <br>
  <textarea wrap="hard" name="comment" rows="10" cols="80"
            accesskey="c"></textarea>
  <br>

  [% IF groups.size > 0 %]
    <br>
    <b>選択されたグループすべてに属するユーザのみがこのバグを閲覧することができます:</b>
    <br>
    <font size="-1">(すべてのボックスのチェックを外すと誰でも見ることのできるバグになります)</font>
    <br>
    <br>

    [% FOREACH group = groups %]
      &nbsp;&nbsp;&nbsp;&nbsp;
      <input type="checkbox" name="bit-[% group.bit %]" value="1" 
        [% " checked=\"checked\"" IF group.ison %]
        [% " disabled=\"disabled\"" IF NOT group.ingroup %]>
      [% group.description %]
      <br>
    [% END %]

    [% IF NOT user.inallgroups %]
      <b>
        グループのメンバーだけがバグの閲覧許可を変更できます
        <!--Only members of a group can change the visibility of a bug for that group-->
      </b>
    <br>
    [% END %]

    [% IF bug.inagroup %]
      <p>
        <b>しかし、以下の役割のユーザは、いつでもこのバグを閲覧できます<!--But users in the roles selected below can always view this bug-->:</b>
        <br>
        <small>
          (担当者                                                
          [% IF (Param('useqacontact')) %]
             と QA コンタクト
          [% END %]
          はいつでもバグを閲覧できます。このセクションは、閲覧できるグループが少なくとも一つは指定されていないと効果を示しません。
          <!--can always see a bug, and this section does not take effect unless the bug is restricted to at least one group.-->)
        </small>
      </p>

      <p>
        <input type="checkbox" name="reporter_accessible" value="1"
          [% " checked" IF bug.reporter_accessible %]>報告者
        <input type="checkbox" name="cclist_accessible" value="1"
          [% " checked" IF bug.cclist_accessible %]>CC リスト
      </p>  
    [% END %]
  [% END %]

[%# *** Knob *** %]

  <br>
  <input type="radio" name="knob" value="none" checked="checked">
           <b>[% bug.bug_status FILTER html %]&nbsp;
              [% bug.resolution FILTER html %]</b> のままにしておく
  <br>

  [% knum = 1 %]

  [% IF bug.bug_status == "UNCONFIRMED" && 
        user.canconfirm %]
    <input type="radio" name="knob" value="confirm">
    バグを承認する (ステータスを <b>NEW</b> にする)
    <br>
    [% knum = knum + 1 %]
  [% END %]

  [% IF user.canedit %]
    [% IF bug.isopened %]
      [% IF bug.bug_status != "ASSIGNED" && user.canconfirm %]
        <input type="radio" name="knob" value="accept">
        担当者がバグを引き受ける (
        [% "バグを承認し、" IF bug.isunconfirmed %]
        ステータスを <b>ASSIGNED</b> にする)
        <br>
        [% knum = knum + 1 %]
      [% END %]

      [% IF bug.resolution %]
        <input type="radio" name="knob" value="clearresolution">
        処理方法を消去する (現在の処理方法
        <b>[% bug.resolution FILTER html %]</b>) を削除する)<br>
        [% knum = knum + 1 %]
      [% END %]

      <input type="radio" name="knob" value="resolve">
      バグを解決して、<a href="bug_status.html">処理方法</a>を
      <select name="resolution" 
              onchange="document.changeform.knob[[% knum %]].checked=true">
      [% FOREACH r = resolution %]
        <option value="[% r FILTER html %]">[% r FILTER html %]</option>
      [% END %]
      </select> に変更する
      <br>
      [% knum = knum + 1 %]

      <input type="radio" name="knob" value="duplicate">
      バグを解決して、bug # 
      <input name="dup_id" size="6" 
             onchange="if (this.value != '')
                       {document.changeform.knob[[% knum %]].checked=true}">
      の重複とする<br>
      [% knum = knum + 1 %]

      <input type="radio" name="knob" value="reassign"> 
      バグを
      <input name="assigned_to" size="32" 
             onchange="if ((this.value != '[% bug.assigned_to_email FILTER js %]') && 
                            (this.value != '')) {
                         document.changeform.knob[[% knum %]].checked=true; 
                       }"  
             value="[% bug.assigned_to_email FILTER html %]">
      に<a href="bug_status.html#assigned_to">再割り当て</A>する<br>
      [% IF bug.isunconfirmed && user.canconfirm %]
        &nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="andconfirm">
        そしてバグを承認する (ステータスを <b>NEW</b> にする)
        <br>
      [% END %]
      [% knum = knum + 1 %]

      <input type="radio" name="knob" value="reassignbycomponent">
      バグをコンポーネントの初期担当者
      [% "と QA コンタクト " IF useqacontact %]
      に再割り当てする
      <br>
      [% IF bug.isunconfirmed && user.canconfirm %]
        &nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="compconfirm">
        そしてバグを承認する (ステータスを <b>NEW</b> にする)
        <br>
      [% END %]
      [% knum = knum + 1 %]
    [% ELSE %]
      [% IF bug.resolution != "MOVED" ||
           (bug.resolution == "MOVED" && user.canmove) %]  
        <input type="radio" name="knob" value="reopen"> バグを再開する
        <br>
        [% knum = knum + 1 %]
      [% END %]
      [% IF bug.bug_status == "RESOLVED" %]
        <input type="radio" name="knob" value="verify">
        バグを <b>VERIFIED</b> にする<br>
        [% knum = knum + 1 %]
      [% END %]
      [% IF bug.bug_status != "CLOSED" %]
        <input type="radio" name="knob" value="close">
        バグを <b>CLOSED</b> にする<br>
        [% knum = knum + 1 %]
      [% END %]
    [% END %]
  [% END %]  
  
  <input type="submit" value="Commit">
  <input type="hidden" name="form_name" value="process_bug">
  <p>
    <font size="+1">
      <b>
        <a href="show_activity.cgi?id=[% bug.bug_id %]">バグの動きを見る</a>
        &nbsp; | &nbsp;
        <a href="long_list.cgi?buglist=[% bug.bug_id %]">印刷用に整形</a>
      </b>
    </font>

    [% IF user.canmove %]
      &nbsp; <font size="+1"><b> | </b></font> &nbsp;
      <input type="submit" name="action" 
             value="[% Param("move-button-text") %]">
    [% END %]
  </p>  
</form>

[%# *** Additional Comments *** %]

<table>
  <tr>
    <td align="left" nowrap="nowrap">
      <b>
        <a name="c0" href="#c0">コメント</a>:
      </b>
    </td>
    <td align="right" width="100%">
      報告日: [% bug.creation_ts %]
    </td>
  </tr>
</table>
<hr>

[% PROCESS bug/comments.html.tmpl 
   comments = bug.comments 
 %]
  
<hr>

[% PROCESS bug/navigate.html.tmpl %]

<br>

[% PROCESS global/footer.html.tmpl %]


