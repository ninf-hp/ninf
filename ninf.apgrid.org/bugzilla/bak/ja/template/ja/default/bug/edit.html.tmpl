[%# Block for dependencies                                                   #%]
[%############################################################################%]

[% BLOCK dependencies %]
  <th align="right">Bug [% bug.bug_id %] [%+ dep.title %]:</th>
  <td>
  [% FOREACH depbug = bug.${dep.fieldname} %]
    [% GetBugLink(depbug, depbug) %][% " " %]
  [% END %]
  </td>
  <td>
    <input name="[% dep.fieldname %]" 
           value="[% bug.${dep.fieldname}.join(', ') %]">
  </td>
[% END %]


