<script type="text/javascript" language="JavaScript">
  var numelements = document.forms.changeform.elements.length;
  function SetCheckboxes(value) {
      var item;
      for (var i=0 ; i<numelements ; i++) {
          item = document.forms.changeform.elements[i];
          item.checked = value;
      }
  }
  document.write(' <input type="button" name="uncheck_all" value="全解除" onclick="SetCheckboxes(false);">');
  document.write(' <input type="button" name="check_all" value="全選択" onclick="SetCheckboxes(true);">');
</script>

<hr>

<p><font size="-1">
  バグをまとめて変更するには:
  <ol>
    <li>上記のバグから変更したいものを選択する。</li>
    <li>下にある項目に対して変更を行なう。もしその変更に説明が必要なときは、コメント欄に記入しておく。</li>
    <li><em>Commit</em> ボタンを押す。</li>
  </ol>
</font></p>

<table id="form">
  <tr>

    <th><label for="product">プロダクト:</label></th>
    <td>
      [% PROCESS selectmenu menuname = "product" 
                            menuitems = products %]
    </td>

    <th><label for="version">バージョン:</label></th>
    <td>
      [% PROCESS selectmenu menuname = "version" 
                            menuitems = versions %]
    </td>

  </tr>
  <tr>

    <th>
      <label for="rep_platform">
        <a href="bug_status.html#rep_platform">プラットフォーム</a>:
      </label>
    </th>
    <td>
      [% PROCESS selectmenu menuname = "rep_platform" 
                            menuitems = platforms %]
    </td>

    <th>
      <label for="priority">
        <a href="bug_status.html#priority">優先順位</a>:
      </label>
    </th>
    <td>
      [% PROCESS selectmenu menuname = "priority" 
                            menuitems = priorities %]
    </td>

  </tr>
  <tr>

    <th><label for="component">コンポーネント:</label></th>
    <td>
      [% PROCESS selectmenu menuname = "component" 
                            menuitems = components %]
    </td>

    <th>
      <label for="bug_severity">
        <a href="bug_status.html#severity">重要度</a>:
      </label>
    </th>
    <td>
      [% PROCESS selectmenu menuname = "bug_severity" 
                            menuitems = severities %]
    </td>

  </tr>
  <tr>

    <th><label for="target_milestone">ターゲットマイルストーン:</label></th>
    <td colspan="3">
      [% PROCESS selectmenu menuname = "target_milestone" 
                            menuitems = targetmilestones %]
    </td>

  </tr>

  [% IF Param("useqacontact") %]
    <tr>
      <th><label for="qa_contact">QA コンタクト:</label></th>
      <td colspan="3">
        <input id="qa_contact" 
               name="qa_contact" 
               value="[% dontchange FILTER html %]" 
               size="32">
      </td>
    </tr>
  [% END %]

  <tr>

    <th><label for="masscc">CC リスト:</label></th>
    <td colspan="3">
      <input id="masscc" name="masscc" size="32">
      <select name="ccaction">
        <option value="add">CC に追加</option>
        <option value="remove">CC から削除</option>
      </select>
    </td>

  </tr>

  [% IF use_keywords %]
    <tr>

      <th>
        <label for="keywords">
          <a href="describekeywords.cgi">キーワード</a>:
        </label>
      </th>
      <td colspan="3">
        <input id="keywords" name="keywords" size="32">
        <select name="keywordaction">
          <option value="add">キーワードを追加</option>
          <option value="delete">キーワードを削除</option>
          <option value="makeexact">キーワードをこのリストに所属させる<!--Make the keywords be exactly this list--></option>
        </select>
      </td>

    </tr>
  [% END %]

</table>

<input type="hidden" name="multiupdate" value="Y">

<label for="comment"><b>追加コメント:</b></label><br>
<textarea id="comment" name="comment" rows="5" cols="80" wrap="hard"></textarea><br>

[% IF groups.size > 0 %]

  <b>グループ:</b><br>
  <table border="1">
    <tr>
      <th>このグループ制限を<br>変更しない</td>
      <th>これらのバグを<br>このグループから外す</td>
      <th>これらのバグを<br>このグループに追加する</td>
      <th>グループ名:</td>
    </tr>

    [% FOREACH group = groups %]
    <tr>
      <td align="center">
        <input type="radio" name="bit-[% group.bit %]" value="-1" checked="checked">
      </td>
      <td align="center">
        <input type="radio" name="bit-[% group.bit %]" value="0">
      </td>
      [% IF group.isactive %]
        <td align="center">
          <input type="radio" name="bit-[% group.bit %]" value="1">
        </td>
      [% ELSE %]
        <td>&nbsp;</td>
        [% foundinactive = 1 %]
      [% END %]

      <td>
        [% IF group.isactive %]
          [% group.description %]
        [% ELSE %]
          [% group.description FILTER strike %]
        [% END %]
      </td>

    </tr>
    [% END %]

  </table>

  [% IF foundinactive %]
    <font size="-1">(Note: <strike>使われていないグループ</strike> にはバグは追加されず、外されるだけかもしれません)</font><br>
  [% END %]

[% END %]



[% knum = 0 %]
<input id="knob-none" type="radio" name="knob" value="none" checked="checked">
<label for="knob-none">他には何もしない</label><br>

[% IF bugstatuses.size == 1 && bugstatuses.0 == unconfirmedstate %]
  [% knum = knum + 1 %]
  <input id="knob-confirm" type="radio" name="knob" value="confirm">
  <label for="knob-confirm">
    バグを承認する (ステータスを <b>NEW</b> にする)
  </label><br>
[% END %]

[% knum = knum + 1 %]
<input id="knob-accept" type="radio" name="knob" value="accept">
<label for="knob-accept">
  担当者がバグを引き受ける (ステータスを <b>ASSIGNED</b> にする)
</label><br>

[%# If all the bugs being changed are open, allow the user to close them. %]
[% IF !bugstatuses.containsany(closedstates) %]
  [% knum = knum + 1 %]
  <input id="knob-clearresolution" type="radio" name="knob" value="clearresolution">
  <label for="knob-clearresolution"> 処理方法を消去する</label><br>

  [% knum = knum + 1 %]
  <input id="knob-resolve" type="radio" name="knob" value="resolve">
  <label for="knob-resolve">
    バグを解決して、<a href="bug_status.html">処理方法</a>を
  </label>
  <select name="resolution" onchange="document.forms.changeform.knob[[% knum %]].checked=true">
    [% FOREACH resolution = resolutions %]
      [% NEXT IF !resolution %]
      <option value="[% resolution FILTER html %]" [% selected IF resolution == "FIXED" %]>
        [% resolution FILTER html %]
      </option>
    [% END %]
  </select> に変更する<br>

[% END %]

[%# If all the bugs are closed, allow the user to reopen them. %]
[% IF !bugstatuses.containsany(openstates) %]
  [% knum = knum + 1 %]
  <input id="knob-reopen" type="radio" name="knob" value="reopen">
  <label for="knob-reopen">バグを再開する</label><br>
[% END %]

[% IF bugstatuses.size == 1 %]
  [% IF bugstatuses.contains('RESOLVED') %]
    [% knum = knum + 1 %]
    <input id="knob-verify" type="radio" name="knob" value="verify">
    <label for="knob-verify"> バグを <b>VERIFIED</b> にする</label><br>
  [% ELSIF bugstatuses.contains('VERIFIED') %]
    [% knum = knum + 1 %]
    <input id="knob-close" type="radio" name="knob" value="close">
    <label for="knob-close"> バグを <b>CLOSED</b> にする</label><br>
  [% END %]
[% END %]

[% knum = knum + 1 %]
<input id="knob-reassign" type="radio" name="knob" value="reassign">
<label for="knob-reassign"> バグを
</label>
<input name="assigned_to" 
       value="[% user.login FILTER html %]"
       onchange="document.forms.changeform.knob[[% knum %]].checked = true;"
       size="32"> に<a href="bug_status.html#assigned_to">再割り当て</a>する<br>

[% knum = knum + 1 %]
<input id="knob-reassignbycomponent" 
       type="radio" 
       name="knob" 
       value="reassignbycomponent">
<label for="knob-reassignbycomponent">
  バグをコンポーネントの初期担当者に再割り当てする
</label><br>

<input type="submit" value="Commit">

[% IF ismover %]
  <input type="submit" name="action" value="[% Param('move-button-text') %]">
[% END %]


