[% PROCESS global/header.html.tmpl
           title = "投票を見る"
           h2 = voting_user.name
 %]

[% canedit = 1 IF voting_user.login == user.login %]

[% IF votes_recorded %]
  <p>
    <font color="red">
      あなたの投票は記録されました。
    </font>
  </p>
[% ELSE %]
  <br>
[% END %]

[% IF products.size %]
  <form action="votes.cgi">
    <input type="hidden" name="action" value="vote">
    <table cellspacing="4">
      <tr>
        <td></td>
        <th>Bug #</th>
        <th>要約</th>
        <th>票数</th>
      </tr>

      [% FOREACH product = products %]
        <tr>
          <th>[% product.name FILTER html %]</th>
          <td></td>
          [% IF product.maxperbug < product.maxvotes AND
                product.maxperbug > 1 %]
            <td>
              <font size="-1">
                (Note: このプロダクトへは、バグレポート一つにつき [% product.maxperbug %] 票しか認められません)
              </font>
            </td>
          [% END %]
        </tr>

        [% FOREACH bug = product.bugs %]
          <tr>
            <td></td>
            <td>
              [% "<strike>" IF NOT bug.opened %]
                <a href="show_bug.cgi?id=[% bug.id %]">
                  [% bug.id %]</a>
              [% "</strike>" IF NOT bug.opened %]
            </td>
            <td>
              <a href="votes.cgi?action=show_bug&amp;bug_id=[% bug.id %]">
                [% bug.summary FILTER html %]
              </a>
            </td>
            <td align="right">
              [% IF canedit %]
                [% IF product.onevoteonly %]
                  <input type="checkbox" name="[% bug.id %]" value="1"
                    [% " checked" IF bug.count %]>
                [% ELSE %]
                  <input name="[% bug.id %]" value="[% bug.count %]" 
                         size="2">
                [% END %]
              [% ELSE %]
                [% bug.count %]
              [% END %]
            </td>
          </tr>
        [% END %]

        <tr>
          <td></td>
          <td colspan="3">最大 [% product.maxvotes %] 票中、
            [% product.total %] 票使用されています。
            <br>
            <br>
          </td>
        </tr>
      [% END %]
    </table>

    [% IF canedit %]
      <input type="submit" value="私の投票を変更する">
      <br>
      <br>
      投票する／投票を取り消すには、数字を入力するか ( 0 は投票なしを意味します)、
      チェックボックスを変更し、<b>私の投票を変更する</b> を押します。
    [% END %]  
  </form>
[% ELSE %]
  <p>
    [% IF canedit %]
    あなたは
    [% ELSE %]
    このユーザは
    [% END %]
    現在どのバグにも投票していません。
  </p>
[% END %]

<p>
  <a href="votehelp.html">投票に関するヘルプ</a>
</p>

[% PROCESS global/footer.html.tmpl %]
